<div id="<%= dom_id todo %>">
  <p>
    <strong>Title:</strong>
    <%= todo.title %>
  </p>

  <%# <p>
    <strong>Completed:</strong>
    <%= todo.completed %>
  <%# </p> %>

  <p>
    <strong>Started At:</strong>
    <%= todo.startDate.nil? ? 'N/A' : todo.startDate %>
  </p>

  <p>
    <strong>Completed At:</strong>
    <%= todo.completedDate.nil? ? 'N/A' : todo.completedDate %>
  </p>

</div>
